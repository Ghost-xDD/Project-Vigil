# Application Settings
APP_NAME="Vigil Collector Service"
APP_VERSION="1.0.0"
DEBUG=True

# Server Settings
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=sqlite:///./vigil.db

# CORS Origins (comma-separated)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# ===== Solana RPC Node Configuration =====

# Ankr Devnet RPC URL
ANKR_DEVNET_RPC_URL=https://rpc.ankr.com/solana_devnet/YOUR_API_KEY_HERE

# Solana Public Devnet RPC URL
SOLANA_PUBLIC_DEVNET_RPC_URL=https://api.devnet.solana.com

# Helius Devnet RPC URL
HELIUS_DEVNET_RPC_URL=https://devnet.helius-rpc.com/?api-key=YOUR_API_KEY_HERE

# Alchemy Devnet RPC URL
ALCHEMY_DEVNET_RPC_URL=https://solana-devnet.g.alchemy.com/v2/YOUR_API_KEY_HERE

# ===== Node Configuration =====

# Name identifier for the simulated self-hosted node
SIMULATED_NODE_NAME=agave_self_hosted

# ===== Polling Configuration =====

# How often to poll nodes (in seconds)
POLL_INTERVAL_SECONDS=15

# Timeout for individual RPC requests (in seconds)
REQUEST_TIMEOUT_SECONDS=8
